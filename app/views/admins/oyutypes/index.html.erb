<div class="container">
    <div class="row">
        <h2>お湯タイプ追加・一覧画面</h2><br>
        <div class="col-xs-10 col-xs-offset-1">
            <%= form_for(@oyutype, url: admins_oyutypes_path) do |f| %>

                <%= f.label :お湯タイプ %>
                <%= f.text_field :name %>

                <%= f.submit "追加", class: "btn btn-primary" %>
            <% end %>
        </div>
        <div class="col-xs-10 col-xs-offset-1">    
            <table class="table sensitsu-index">
                <thead>
                    <tr>
                    <th>お湯タイプ</th>
                    <th></th>
                    </tr>
                </thead>
                <tbody>
                <% @oyutypes.each do |oyutype| %>
                    <tr>
                    <td><%= oyutype.name %></td>
                    <td><%= link_to "編集する", edit_admins_oyutype_path(oyutype), class: "btn btn-primary" %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>