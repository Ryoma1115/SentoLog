<div class="container">
    <div class="row">
        <h2>効能追加・一覧画面</h2><br>
        <div class="col-xs-10 col-xs-offset-1">
            <%= form_for(@kounou, url: admins_kounous_path) do |f| %>

                <%= f.label :効能 %>
                <%= f.text_field :name %>

                <%= f.submit "追加", class: "btn btn-primary" %>
            <% end %>
        </div>
        <div class="col-xs-10 col-xs-offset-1">    
            <table class="table sensitsu-index">
                <thead>
                    <tr>
                    <th>効能</th>
                    <th></th>
                    </tr>
                </thead>
                <tbody>
                <% @kounous.each do |kounou| %>
                    <tr>
                    <td><%= kounou.name %></td>
                    <td><%= link_to "編集する", edit_admins_kounou_path(kounou), class: "btn btn-primary" %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>