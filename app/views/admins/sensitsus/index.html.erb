<div class="container">
    <div class="row">
        <h2>泉質追加・一覧画面</h2><br>
        <div class="col-xs-10 col-xs-offset-1">
            <%= form_for(@sensitsu, url: admins_sensitsus_path) do |f| %>

                <%= f.label :泉質 %>
                <%= f.text_field :name %>

                <%= f.submit "追加", class: "btn btn-primary" %>
            <% end %>
        </div>
        <div class="col-xs-10 col-xs-offset-1">    
            <table class="table sensitsu-index">
                <thead>
                    <tr>
                    <th>泉質</th>
                    <th></th>
                    </tr>
                </thead>
                <tbody>
                <% @sensitsus.each do |sensitsu| %>
                    <tr>
                    <td><%= sensitsu.name %></td>
                    <td><%= link_to "編集する", edit_admins_sensitsu_path(sensitsu), class: "btn btn-primary" %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>