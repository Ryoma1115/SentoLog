    <% else %>
        <div class="box2"><%=link_to "いいね♡", users_onsen_spot_review_favorites_path(review.id), method: :post, remote: true, style: "color: #f0a80e;" %></div>
    <% end %>
<% else %>
    <div class="box2">いいね<%= review.favorites.count %></div>
<% end %>