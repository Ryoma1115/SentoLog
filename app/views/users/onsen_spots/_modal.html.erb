<div class="row">
    <div class="col-xs-6 col-xs-offset-1">
        <%= link_to attachment_image_tag(onsen_spot, :image, :fill, 300, 250, fallback: "onsen_spot_default.jpg", style: "border-radius: 20px;", size: "300x250"), users_onsen_spot_path(@onsen_spot) %>
    </div>
    <div class="col-xs-4">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            口コミ投稿する
        </button>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="exampleModalLabel"><strong>口コミ投稿</strong></h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="comment_form">
                            <%= form_for [onsen_spot, review], url: users_onsen_spot_reviews_path(onsen_spot), method: :post do |f| %>
                                <%= f.text_area :comment, size: "78x5" %>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button><%= f.submit '口コミ投稿する', class: "btn btn-primary" %></button>
                        <% end %>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>