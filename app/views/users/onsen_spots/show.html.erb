<div class="container">
    <div class="row">
        <div class="col-xs-8 col-xs-offset-1">
            <table class="onsen_spot_show">
                <thead>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </thead>
                <tbody>
                    <tr class="onsen_spot_name">
                        <td><strong><%= @onsen_spot.name %></strong></td>
                    </tr>
                    <tr class="onsen_spot_address">
                        <td>〒<%= @onsen_spot.postal_code %><%= @onsen_spot.address %></td>
                    </tr>
                    <tr>
                        <td><%= %></td>
                    </tr>
                    <tr class="onsen_spot_introduction">
                        <td><%= @onsen_spot.introduction %></td>
                    </tr>
                    <tr class="onsen_spot_sensitsu">
                        <td>
                        <% @onsen_spot.sensitsus.each do |sensitsu| %>
                        <%= sensitsu.name %>
                        <% end %>
                        <% @onsen_spot.kounous.each do |kounou| %>
                        <%= kounou.name %>
                        <% end %>
                        <% @onsen_spot.oyutypes.each do |oyutype| %>
                        <%= oyutype.name %>
                        <% end %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6 col-xs-offset-1">
            <%= link_to attachment_image_tag(@onsen_spot, :image, :fill, 300, 250, fallback: "onsen_spot_default.jpg", style: "border-radius: 20px;", size: "300x250"), users_onsen_spot_path(@onsen_spot) %>
        </div>
        <div class="col-xs-4">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            口コミ投稿する
        </button>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="comment_form">
                        <%= form_for [@onsen_spot, @review], url: users_onsen_spot_reviews_path(@onsen_spot), method: :post do |f| %>
                            <%= f.text_area :comment, size: "90x5" %>
                            <%= f.submit '送信' %>
                        <% end %>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
                </div>
            </div>
        </div>
                    <%= link_to "口コミ投稿する", '', class: "d-flex align-items-center" %>
        </div>
    </div>
            <!-- コメント一覧 -->
    <div class="row">
      <div class="col-xs-8 col-xs-offset-1">
        <table class="show-tb">
          <% @reviews.each do |review| %>
            <tr>
              <td>
                <%= review.user.full_name %>
              </td>
              <td>
                <%= review.comment %>
              </td>
              <td>
                <% if current_user.id == review.user.id %>
                  <%= link_to "Destroy", users_onsen_spot_review_path(review), method: :delete ,class:"btn btn-danger btn-sm" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
</div>